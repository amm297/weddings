{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "./out",
    "ignore": [
      "firebase.json",
      ".git",
      "node_modules",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true,
    "export": {
      "directory": "./.firebase-data"
    }
  }
}
